@model BakeryBite.Data.OrderConfirmationViewModel

@{
    ViewData["Title"] = "Подтверждение заказа";
    Layout = "_Layout";

    var userId = Context.Session.GetInt32("UserId");
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/EditorTemplate.css" />

<h1>Оформление заказа</h1>

<form method="post" asp-action="ConfirmOrder" asp-controller="Home">
    @if (Model.RoleId == 4)
    {
        <div class="form-group">
            <label asp-for="Address">Адрес доставки:</label>
            <input asp-for="Address" type="text" placeholder="Введите адрес доставки" class="form-control" required />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PaymentMethod">Способ оплаты:</label>
            <select asp-for="PaymentMethod" class="form-control" required>
                <option value="Карта">Картой</option>
                <option value="Наличные">Наличными</option>
            </select>
            <span asp-validation-for="PaymentMethod" class="text-danger"></span>
        </div>
        <input type="hidden" asp-for="Name" value="q" />
        <input type="hidden" asp-for="Email" value="q" />
        <input type="hidden" asp-for="Phone" value="1" />
    }
    else
    {
        <div class="form-group">
            <label asp-for="Name">Имя:</label>
            <input asp-for="Name" type="text" maxlength="32" pattern="^[а-яА-ЯёЁ]+$" placeholder="Введите ваше имя" class="form-control" required title="Имя должно содержать только русские буквы и быть не длиннее 32 символов" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email">Email:</label>
            <input asp-for="Email" type="email" placeholder="Введите вашу почту" class="form-control" required />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Phone">Номер телефона:</label>
            <input asp-for="Phone" type="tel" pattern="^7\d{10}$" placeholder="Введите ваш номер телефона" class="form-control" required title="Номер телефона должен начинаться с 7 и состоять из 11 цифр" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address">Адрес доставки:</label>
            <input asp-for="Address" type="text" placeholder="Введите адрес доставки" class="form-control" required />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PaymentMethod">Способ оплаты:</label>
            <select asp-for="PaymentMethod" class="form-control" required>
                <option value="Карта">Картой</option>
                <option value="Наличные">Наличными</option>
            </select>
            <span asp-validation-for="PaymentMethod" class="text-danger"></span>
        </div>
    }
    <button type="submit" class="btn btn-primary">Подтвердить заказ</button>
</form>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const form = document.querySelector("form");
        const addressInput = form.querySelector("input[name='Address']");
        const addressErrorSpan = form.querySelector("span[data-valmsg-for='Address']");

        form.addEventListener("submit", function (event) {
            const addressValue = addressInput.value.trim();
            if (!addressValue) {
                event.preventDefault();
                addressErrorSpan.textContent = "Адрес доставки не может содержать только пробелы.";
                addressErrorSpan.style.display = "block";
                addressInput.classList.add("input-validation-error");
            } else {
                addressErrorSpan.textContent = "";
                addressErrorSpan.style.display = "none";
                addressInput.classList.remove("input-validation-error");
            }
        });
    });
</script>

@model BakeryBite.Data.FoodViewModel

@{
    ViewData["Title"] = Model.Category.Name;
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/FoodTemplate.css" />
<link rel="stylesheet" href="~/lib/toastr/toastr.min.css" />

<main class="grid-container">
    <div class="grid-item" style="align-items: center">
        <form asp-controller="Home" asp-action="Index" method="get">
            <button type="submit" class="custom-button" id="icon">
                <img src="~/img/Subtract.svg" alt="Изображение">
            </button>
        </form>
        <h1 class="start">@Model.Category.Name</h1>
    </div>
    <div class="grid-item">
        @if (Model.Products.Any(p => !p.IsHidden))
        {
            @foreach (var product in Model.Products.Where(p => !p.IsHidden))
            {
                <div class="base">
                    <div class="image">
                        <img class="product-img" src="data:image/png;base64,@product.Avatar" alt="">
                    </div>
                    <div class="text">
                        <p class="product-name">@product.Name</p>
                        <p class="product-weight">@(Math.Round(product.Weight / 1000, 2)) кг</p>
                        <p class="product-detail">@product.Description</p>
                    </div>
                    <p class="product-price">@product.Cost руб.</p>
                    <button type="button" class="add-button" onclick="addToCart(@product.Id, 1)">
                        <img src="~/img/Add.svg" alt="Изображение">
                    </button>
                </div>
            }
        }
        else
        {
            <div class="grid-item-2">
                <h2>Извините, товаров этой категории сейчас не наблюдается!</h2>
            </div>
        }
    </div>
</main>

<div class="pagination-container">
    @if (Model.CurrentPage > 1)
    {
        <a asp-action="@Model.ActionName" asp-route-page="@(Model.CurrentPage - 1)" class="page-link">Назад</a>
    }

    @for (int i = 1; i <= Model.TotalPages; i++)
    {
        <a asp-action="@Model.ActionName" asp-route-page="@i" class="page-link @(i == Model.CurrentPage ? "active" : "")">@i</a>
    }

    @if (Model.CurrentPage < Model.TotalPages)
    {
        <a asp-action="@Model.ActionName" asp-route-page="@(Model.CurrentPage + 1)" class="page-link">Вперед</a>
    }
</div>

<div class="background-container" style="background-image: url('data:image/jpeg;base64,@Model.Category.ImageBack');">
    <div class="overlay"></div>
</div>

<script src="~/lib/jquery/jquery-3.6.0.min.js"></script>
<script src="~/lib/toastr/toastr.min.js"></script>

<script>
    toastr.options = {
        "positionClass": "toast-bottom-right",
        "timeOut": "3000",
        "progressBar": true
    };

    function addToCart(productId, quantity) {
        $.ajax({
            url: '@Url.Action("AddToCart", "Home")',
            type: 'POST',
            data: { productId: productId, quantity: quantity },
            success: function () {
                toastr.success('Товар успешно добавлен в корзину!', '');
            },
            error: function () {
                toastr.error('Ошибка при добавлении товара в корзину.');
            }
        });
    }
</script>

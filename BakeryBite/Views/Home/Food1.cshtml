@model BakeryBite.Data.FoodViewModel

@{
    ViewData["Title"] = "Хлеб";
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/FoodTemplate.css" />

<main class="grid-container">
    <div class="grid-item" style="align-items: center">
        <form asp-controller="Home" asp-action="Index" method="get">
            <button type="submit" class="custom-button" id="icon">
                <img src="~/img/Subtract.svg" alt="Изображение">
            </button>
        </form>
        <h1 class="start">@Model.Category.Name</h1>
    </div>
    <div class="grid-item">
        @if (Model.Products.Any())
        {
            @foreach (var product in Model.Products)
            {
                <div class="base">
                    <div class="image">
                        <img class="product-img" src="data:image/png;base64,@product.Avatar" alt="">
                    </div>
                    <div class="text">
                        <p class="product-name">@product.Name</p>
                        <p class="product-weight">@(Math.Round(product.Weight / 1000, 2)) кг</p>
                        <p class="product-detail">@product.Description</p>
                    </div>
                    <p class="product-price">@product.Cost руб.</p>
                    <button type="button" class="add-button" onclick="addToCart(@product.Id, 1)">
                        <img src="~/img/Add.svg" alt="Изображение">
                    </button>
                </div>
            }
        }
        else
        {
            <div class="grid-item-2">
                <h2>Извините, товаров этой категории сейчас не наблюдается!</h2>
            </div>
        }
    </div>
</main>

<div class="background-container" style="background-image: url('data:image/jpeg;base64,@Model.Category.ImageBack');">
    <div class="overlay"></div>
</div>

<script>
    var activePanels = [];

    function addToCart(productId, quantity) {
        $.ajax({
            url: '@Url.Action("AddToCart", "Home")',
            type: 'POST',
            data: { productId: productId, quantity: quantity },
            success: function () {
                showFeedbackPanel();
            },
            error: function () {
                alert('Ошибка при добавлении товара в корзину.');
            }
        });

        function showFeedbackPanel() {
            var feedbackPanel = document.createElement('div');
            feedbackPanel.classList.add('feedback-panel');

            var feedbackContent = document.createElement('div');
            feedbackContent.classList.add('feedback-content');
            feedbackContent.innerHTML = '<span class="feedback-message">Товар успешно добавлен в корзину!</span>';

            feedbackPanel.appendChild(feedbackContent);

            document.body.appendChild(feedbackPanel);

            activePanels.push(feedbackPanel);

            setTimeout(function () {
                feedbackPanel.classList.add('active');
            }, 50);

            setTimeout(function () {
                feedbackPanel.style.opacity = '0';
                setTimeout(function () {
                    feedbackPanel.parentNode.removeChild(feedbackPanel);
                    activePanels.splice(activePanels.indexOf(feedbackPanel), 1);
                    updatePanelPositions();
                }, 300);
            }, 3000);

            updatePanelPositions();
        }

        function updatePanelPositions() {
            var topOffset = 20;
            for (var i = activePanels.length - 1; i >= 0; i--) {
                var panel = activePanels[i];
                panel.style.bottom = topOffset + 'px';
                topOffset += panel.offsetHeight + 10;
            }
        }
    }
</script>

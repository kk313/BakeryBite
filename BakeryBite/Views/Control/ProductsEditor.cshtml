@model BakeryBite.Data.FoodViewModel

@{
    ViewData["Title"] = "Товары";
    Layout = "_LayoutSecond";
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/FoodEditor.css" />
<link rel="stylesheet" href="~/lib/toastr/toastr.min.css" />

<h2>Список всех товаров</h2>
<div class="header-bar">
    <a asp-controller="Control" asp-action="ProductOneAdder" class="btn-primary btn-add">Добавить новый товар</a>
    <form asp-action="@Model.ActionName" method="get" class="search-form">
        <input type="text" name="searchTerm" value="@Model.SearchTerm" placeholder="Поиск товаров..." class="search-input" />
        <button type="submit" class="btn btn-primary">Поиск</button>
    </form>
</div>

<div class="products-container">
    @if (Model.Products.Any())
    {
        @foreach (var product in Model.Products)
        {
            <div class="product-item" id="product-@product.Id">
                <div class="image">
                    <img class="product-img" src="data:image/png;base64,@product.Avatar" alt="">
                </div>
                <div class="details">
                    <p><strong>@product.Name</strong></p>
                    <p>@(Math.Round(product.Weight / 1000, 2)) кг</p>
                    <p>@product.Description</p>
                    <p>@product.Cost руб.</p>
                </div>
                <div class="actions">
                    <a href="@Url.Action("ProductOneEditor", "Control", new { productId = product.Id })" class="btn-primary">Редактировать</a>
                    <button type="button" onclick="confirmDelete(@product.Id)" class="btn-delete">Удалить</button>
                    @if (product.IsHidden)
                    {
                        <button type="button" class="btn btn-primary btn-show" onclick="toggleVisibility(@product.Id)">Показать</button>
                    }
                    else
                    {
                        <button type="button" class="btn btn-primary btn-hide" onclick="toggleVisibility(@product.Id)">Скрыть</button>
                    }
                </div>
            </div>
        }
    }
    else
    {
        <p>Товары не найдены.</p>
    }
</div>

<div class="pagination-container">
    @if (Model.CurrentPage > 1)
    {
        <a asp-action="@Model.ActionName" asp-route-page="@(Model.CurrentPage - 1)" asp-route-searchTerm="@Model.SearchTerm" class="page-link">Назад</a>
    }

    @for (int i = 1; i <= Model.TotalPages; i++)
    {
        <a asp-action="@Model.ActionName" asp-route-page="@i" asp-route-searchTerm="@Model.SearchTerm" class="page-link @(i == Model.CurrentPage ? "active" : "")">@i</a>
    }

    @if (Model.CurrentPage < Model.TotalPages)
    {
        <a asp-action="@Model.ActionName" asp-route-page="@(Model.CurrentPage + 1)" asp-route-searchTerm="@Model.SearchTerm" class="page-link">Вперед</a>
    }
</div>

<script src="~/lib/jquery/jquery-3.6.0.min.js"></script>
<script src="~/lib/toastr/toastr.min.js"></script>

<script>
    toastr.options = {
        "positionClass": "toast-bottom-right",
        "timeOut": "3000",
        "progressBar": true
    };

    function confirmDelete(productId) {
        console.log("Deleting product with ID:", productId);
        if (confirm('Вы уверены, что хотите удалить этот товар?')) {
            $.ajax({
                url: '@Url.Action("DeleteProduct", "Control")',
                type: 'POST',
                contentType: 'application/json; charset=utf-8',
                dataType: 'json',
                data: JSON.stringify(productId),
                success: function (response) {
                    if (response.success) {
                        $('#product-' + productId).remove();
                        toastr.success('Товар успешно удален.');
                    } else {
                        toastr.error(response.errorMessage || 'Не удалось удалить товар.');
                    }
                },
                error: function (xhr, status, error) {
                    toastr.error('Произошла ошибка при удалении товара.');
                }
            });
        }
    }

    function toggleVisibility(productId) {
        $.ajax({
            url: '@Url.Action("ToggleVisibility", "Control")',
            type: 'POST',
            data: { productId: productId },
            success: function (response) {
                window.location.reload();
            },
            error: function (xhr, status, error) {
                toastr.error('Произошла ошибка при изменении видимости товара.');
            }
        });
    }
</script>

@model BakeryBite.Data.ProductViewModel

@{
    ViewData["Title"] = "Добавление товара";
    Layout = "_LayoutSecond";
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/EditorTemplate.css" />

<h2>Добавление нового товара</h2>

<form asp-action="AddProduct" asp-controller="Control" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Product.Name">Название товара:</label>
        <input asp-for="Product.Name" class="form-control" required maxlength="32" pattern="^[а-яА-Яa-zA-Z ]+$">
        <span asp-validation-for="Product.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Product.Weight">Вес товара (г):</label>
        <input asp-for="Product.Weight" class="form-control" required pattern="^[0-9]+$">
        <span asp-validation-for="Product.Weight" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Product.Description">Описание товара:</label>
        <textarea asp-for="Product.Description" class="form-control" required maxlength="64" pattern="^[а-яА-Яa-zA-Z ]+$"></textarea>
        <span asp-validation-for="Product.Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Product.Cost">Стоимость товара (руб.):</label>
        <input asp-for="Product.Cost" class="form-control" required pattern="^[0-9]+$">
        <span asp-validation-for="Product.Cost" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Product.CategoryId">Категория товара:</label>
        <select asp-for="Product.CategoryId" asp-items="@Model.Categories.Select(c => new SelectListItem { Text = c.Name, Value = c.Id.ToString() })" class="form-control">
            <option value="">Выберите категорию</option>
        </select>
        <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Image" class="control-label">Изображение товара:</label>
        <input type="file" id="Image" name="Image" accept="image/*" class="form-control-file" onchange="previewImage(event)" data-val="false" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-primary">Добавить товар</button>
</form>